#############################################################
# Ejemplo de archivo .env para despliegue de producción      #
# Copia este archivo como .env y ajusta los valores.         #
#############################################################

########################
# Entorno y Logging    #
########################
ENVIRONMENT=production
LOG_LEVEL=INFO

########################
# API y CORS           #
########################
API_PORT=3004
# Lista de orígenes permitidos (coma-separado). Obligatorio en producción.
CORS_ORIGINS=https://tu-dominio.com,https://admin.tu-dominio.com

########################
# Observabilidad       #
########################
# Métricas Prometheus (false por defecto en prod)
METRICS_ENABLED=false
# Tracing OpenTelemetry
TRACING_ENABLED=false
# Endpoint OTLP (HTTP). Si lo defines, se activa export automático.
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318

########################
# Rate Limiting (SlowAPI)
########################
# Vacío = sin límite global
RATE_LIMIT_GLOBAL=
RATE_LIMIT_UPLOAD=10/minute
RATE_LIMIT_PROCESS=4/minute
RATE_LIMIT_REPORTS=2/minute

########################
# Base de Datos (elige una opción)
########################
# Opción A: URL completa (recomendada)
# DATABASE_URL=postgresql+psycopg2://traffic_admin:<password>@postgres:5432/bogota_traffic

# Opción B: variables sueltas
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=bogota_traffic
POSTGRES_USER=traffic_admin
POSTGRES_PASSWORD=CAMBIAME

########################
# Frontend             #
########################
WEB_PORT=3000
VITE_API_BASE_URL=http://localhost:3004

########################
# Redis (opcional)     #
########################
REDIS_HOST=redis
REDIS_PORT=6379

########################
# Otros (opcional)     #
########################
PYTHONUNBUFFERED=1
DATA_DIR=/app/data

# Guardar este archivo como .env y luego ejecutar:
# docker compose up -d
